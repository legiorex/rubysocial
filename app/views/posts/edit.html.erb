<div class="col-md-8">
<form action="/posts/update/<%= @post.id %>" method="POST">
  <div class="form-group">
    <label for="title">Заголовок</label>
    <input type="text" name="post[title]" value="<%= @post.title %>" class="form-control">
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Выберите тему</label>
    <select class="form-control" name="post[topic_id]">
      <% @topics.each do |topic| %>
      <option value="<%= topic.id%>"
      <% if @post.topic_id == topic.id%>selectted=selected <% end %> >
      <%= topic.title%>
      </option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <label>Текст:</label>
    <textarea name="post[body]" class="form-control" rows="10"> <%= @post.body%> </textarea>
  </div>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
   <button type="submit" class="btn btn-primary">Создать</button>
</form>
</div>
